<databases-systems>

   <database>
      <id>1</id>
      <name>Oracle</name>
      <url-patterns>
          <url>jdbc:oracle:thin:@[host]:[port]:[source]</url>
          <url>jdbc:oracle:oci:@[host]:[port]:[source]</url>
      </url-patterns>
   </database>

   <database>
      <id>2</id>
      <name>SyBase</name>
      <url-patterns>
          <url>jdbc:sybase:Tds:[host]:[port]/[source]</url>
      </url-patterns>
   </database>
   
   <database>
      <id>3</id>
      <name>DB2</name>
      <url-patterns>
          <url>jdbc:db2://[host]:[port]/[source]</url>
      </url-patterns>
   </database>

   <database>
      <id>4</id>
      <name>MS SQL Server</name>
      <url-patterns>
          <url>jdbc:microsoft:sqlserver://[host]:[port]</url>
          <url>jdbc:microsoft:sqlserver://[host]:[port];DatabaseName=[source]</url>
          <url>jdbc:sqlserver://[host];databaseName=[source];</url>
      </url-patterns>
   </database>

   <database>
      <id>5</id>
      <name>MySQL</name>
      <url-patterns>
          <url>jdbc:mysql://[host]:[port]/[source]</url>
      </url-patterns>
   </database>

   <database>
      <id>6</id>
      <name>PostgreSQL</name>
      <url-patterns>
          <url>jdbc:postgresql://[host]:[port]/[source]</url>
      </url-patterns>
   </database>

   <database>
      <id>7</id>
      <name>Informix</name>
      <url-patterns>
          <url>jdbc:informix-sqli://[host]:[port]:informixserver=[source]</url>
      </url-patterns>
   </database>

   <database>
      <id>10</id>
      <name>HSQL DB</name>
      <url-patterns>
          <url>jdbc:hsqldb:[source]</url>
          <url>jdbc:hsqldb:hsql://[host]:[port]</url>
      </url-patterns>
   </database>

   <database>
      <id>11</id>
      <name>MS Access</name>
      <url-patterns/>
   </database>

   <database>
      <id>12</id>
      <name>Pointbase</name>
      <url-patterns>
          <url>jdbc:pointbase:server://[host]:[port]/[source]</url>
      </url-patterns>
